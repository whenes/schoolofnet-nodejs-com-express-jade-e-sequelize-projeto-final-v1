extends layout 

block content 
  div(class="row")
    div(class="col s6 offset-s3 panel")
      div(class="col s12 center")
        h2 List of tasks
        a(href="/tasks/create", class="btn-flat teal") Create
      table 
        thead 
          tr 
            th Name 
            th Done
            th Action
        tbody 
          each task in tasks 
            tr 
              td= task.name 
              td= task.done == 'true' ? 'Yes':'No'
              td
                form(method="POST", action="/tasks/" + task.id)
                  input(type="hidden", name="_method", value="DELETE")
                  input(type="submit", class="btn-flat red", value="Delete")
              td
                a(href="/tasks/edit/" + task.id, class="btn-flat blue") Edit
              td
                a(href="/tasks/" + task.id, class="btn-flat purple") View