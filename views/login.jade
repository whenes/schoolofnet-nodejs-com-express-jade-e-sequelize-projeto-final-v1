extends layout

block content 
  div(class="row")
    div(class="col s3 form-login offset-s4")
      div(class="col s12 center")
        h2 Login
      form(method="POST", action="/users/auth")
        div(class="input-field col s12")
          input(type="text", placeholder="Username", name="username", class="validate")
        div(class="input-field col s12")
          input(type="password", placeholder="Password", name="password", class="validate")
        div(class="input-field col s12")
          button(type="submit", class="btn-flat teal") Login
        